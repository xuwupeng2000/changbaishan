%h2 
  Sign up

.row
  .col-lg-8
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'light-border form-horizontal'}  ) do |f|
      = f.error_notification

      .form-inputs
        = f.input :first_name, autofocus: true
        = f.input :last_name
        = f.input :email
        = f.input :password
        = f.hint  "#{@minimum_password_length} characters minimum"
        = f.input :password_confirmation
      .form-actions
        = f.button :submit, "Sign up"

  .col-lg-3
    = render "devise/shared/links"
