= simple_form_for [:admin, @product], input_html: { class: 'form-vertical' } do |f|
  = f.error_notification

  .row
    .col-lg-6.pull-left
      = f.input :product_category_id, as: :select, collection: Product::Category.all, include_blank: false, input_html: { class: 'js-select2 select2' }
      = f.input :is_public, as: :select, collection: [true, false], include_blank: false
      = f.hint  'Public product can be used by everyone'
      = f.input :name, autofocus: true, required: true
      = f.input :weight, as: :decimal
      = f.hint  'Weight is calculated by KG in the system'
    
    .col-lg-6.pull-right
      = f.input :purchase_price, as: :decimal
      = f.input :selling_price, as: :decimal

      = f.input :description

  .row
    .col-lg-12
      .form-actions
        = f.button :submit, "Save"
