= simple_form_for [:admin, @product] do |f|
  = f.error_notification

  .form-inputs
    = f.input :product_category_id, collection: Product::Category.all, include_blank: false
    = f.input :name, autofocus: true, required: true
    = f.input :weight, as: :string
    = f.hint  'Weight is calculated by KG in the system'
    = f.input :description
    = f.input :is_public, as: :select, collection: [true, false], include_blank: false
    = f.hint  'Public product can be used by everyone'

  .form-actions
    = f.button :submit, "Save"
    = link_to 'Cancel', admin_products_path
